{
  "name": "ui-test",
  "version": "1.0.0",
  "description": "POC UI Test",
  "main": "main.js",
  "scripts": {
    "serve": "node public/server.js",
    "compile": "browserify src/js/main.js -t babelify --outfile public/bundle.js",
    "prebuild": "mkdir -p public",
    "build:html": "cp src/static/index.html public/index.html",
    "build:css": "node-sass --include-path src/css src/css/style.scss public/style.css",
    "build": "npm run compile && npm run build:html && npm run build:css",
    "build:production": "NODE_ENV=production npm run build",
    "pretest": "npm run compile",
    "test:jest": "jest",
    "test": "npm run test:jest",
    "prewatch": "npm run build",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "watchify src/js/main.js -t babelify -o public/bundle.js -v",
    "watch:css": "nodemon -e scss -x \"npm run build:css\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.0.20",
    "babel-jest": "^5.3.0",
    "babelify": "^6.4.0",
    "browserify": "^11.2.0",
    "es6-module-loader": "^0.17.8",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "watchify": "^3.5.0"
  },
  "dependencies": {
    "accounting": "^0.4.1",
    "babel-jest": "^5.3.0",
    "d3": "https://github.com/jtfmumm/d3",
    "express": "^4.13.3",
    "flux": "^2.1.1",
    "history": "^1.12.6",
    "humanize-duration": "^3.3.0",
    "immutable": "^3.7.5",
    "jest": "^0.1.40",
    "jest-cli": "^0.6.1",
    "moment": "^2.10.6",
    "pusher": "^1.0.6",
    "pusher-js": "^3.0.0",
    "react": "^0.14.0",
    "react-addons-css-transition-group": "^0.14.2",
    "react-addons-perf": "^0.14.3",
    "react-bootstrap": "^0.27.3",
    "react-dom": "^0.14.0",
    "react-faux-dom": "^2.0.1",
    "react-router": "^1.0.0-rc3",
    "react-router-bootstrap": "^0.19.3"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
